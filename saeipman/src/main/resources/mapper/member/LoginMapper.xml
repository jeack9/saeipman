<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.saeipman.app.member.mapper.LoginMapper">
	<!-- 로그인 단건조회 -->
	<select id="selectLoginInfo">
		SELECT login_id
		       ,pw
		       ,auth
		FROM login_info
		WHERE login_id = #{loginId}
	</select>
	<!-- 임대인 단건조회 -->
	<select id="selectImdaeinInfo">
		SELECT imdaein_id
		      ,imdaein_name
		      ,imdaein_email
		      ,birth
		      ,phone
		FROM imdaein
		WHERE imdaein_id = #{id}
	</select>
	<!-- 임대인 중복체크 -->
	<select id="ckIdDupl">
		SELECT COUNT(*)
		FROM imdaein
		WHERE imdaein_id = #{id}
	</select>
	
	<!-- 임대인 단건추가  -->
	<insert id="insertImdaein">
		INSERT INTO imdaein(
		                imdaein_id
                   ,imdaein_name 
                   ,phone
                   ,imdaein_email
                   ,birth)
		VALUES (#{imdaeinId}
		       ,#{imdaeinName}
		       ,#{phone}
		       ,#{imdaeinEmail}
		       ,#{birth})
	</insert>
	<!-- 로그인 단건추가 -->
	<insert id="insertLogin">
	INSERT INTO login_info (
    login_id
    ,pw
    ,auth
	) 
	VALUES (
	    #{loginId}
	    ,#{pw}
	    ,#{auth}
	)
	</insert>
</mapper>